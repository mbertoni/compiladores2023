  ChangeLog.md
  README.md



executable compiladores2023
  main-is:            Main.hs

  -- Modules included in this executable, other than Main.
  other-modules:
    ByteCompile
    Optimizer
    CEK
    Common
    Core
    Elab
    Errors
    Eval
    Global
    MonadFD4
    Parse
    PPrint
    Scaffolding
    Subst
    Surf
    TypeChecker
    IR
    ClosureConvert
    
  
  hs-source-dirs:     src

  default-language:   GHC2021

  ghc-options:
    -haddock -threaded -rtsopts -with-rtsopts=-N -fwarn-tabs
    -fwarn-unused-imports -fwarn-missing-signatures
    -fwarn-name-shadowing -fwarn-incomplete-patterns -fwrite-ide-info

  default-extensions:
    LambdaCase
    NamedWildCards
    OverloadedRecordDot
    OverloadedStrings
    PartialTypeSignatures
    RecordWildCards
    TupleSections

  other-extensions:
    PatternSynonyms
    GADTs

  build-depends:
    , base                         >=4.17
    , binary
    , bytestring
    , composition
    , data-default
    , data-default-generics
    , exceptions
    , extra
    , filepath
    , haskeline
    , mtl
    , optparse-applicative
    , parsec
    , pretty
    , prettyprinter
    , prettyprinter-ansi-terminal
    , text
